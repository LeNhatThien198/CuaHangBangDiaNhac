@model LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
    ViewData["HideHeader"] = true; 
}

<div class="row justify-content-center align-items-center min-vh-100 py-5">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body p-4 p-sm-5">
                
                <div class="text-center mb-4">
                    <h3 class="fw-bold mb-1"><i class="fas fa-compact-disc me-2"></i>ĐĂNG NHẬP</h3>
                    <p class="text-muted small">Chào mừng bạn quay trở lại!</p>
                </div>

                <form asp-action="Login" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="EmailOrUsername" class="form-control" placeholder="Email" />
                        <label asp-for="EmailOrUsername"></label>
                        <span asp-validation-for="EmailOrUsername" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Mật khẩu" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="RememberMe" />
                            <label class="form-check-label small" asp-for="RememberMe"></label>
                        </div>
                        <a href="ForgotPassword" class="small text-decoration-none text-muted">Quên mật khẩu?</a>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-dark btn-lg">Đăng nhập</button>
                    </div>
                </form>

                <div class="position-relative my-4">
                    <hr class="text-muted opacity-25">
                    <span class="position-absolute top-50 start-50 translate-middle bg-white px-2 text-muted small">HOẶC</span>
                </div>

                <form asp-action="GoogleLogin" method="post" class="d-grid mb-3">
                    <button type="submit" class="btn btn-google btn-lg">
                        <svg class="google-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
                            <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.341,43.611,20.083z" />
                            <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z" />
                            <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z" />
                            <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.341,43.611,20.083z" />
                        </svg>
                        <span>Đăng nhập với Google</span>
                    </button>
                </form>

                <div class="text-center mt-4">
                    <p class="small text-muted mb-0">Chưa có tài khoản? 
                        <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="fw-bold text-dark">Đăng ký ngay</a>
                    </p>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-3">
            <a asp-controller="Home" asp-action="Index" class="text-muted small text-decoration-none">
                <i class="bi bi-arrow-left me-1"></i> Quay về trang chủ
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (ViewData["BannedAccount"] != null && (bool)ViewData["BannedAccount"] == true)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                Swal.fire({
                    icon: 'error',
                    title: 'Tài khoản bị khóa',
                    text: 'Tài khoản của bạn đã bị vô hiệu hóa. Vui lòng liên hệ Admin để được hỗ trợ.',
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'Đã hiểu'
                });
            });
        </script>
    }   
}