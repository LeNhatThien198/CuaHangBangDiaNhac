@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu"; 
    ViewData["HideHeader"] = true;
}

<div class="row justify-content-center align-items-center min-vh-100 py-5">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body p-4 p-sm-5">
                <div class="text-center mb-4">
                    <h3 class="fw-bold">Đặt lại mật khẩu</h3>
                </div>
                <form asp-action="ResetPassword" method="post">
                    <input asp-for="Code" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email" readonly />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Mật khẩu mới" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Xác nhận" />
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Lưu mật khẩu mới</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}