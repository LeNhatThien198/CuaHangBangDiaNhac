@model CuaHangBangDiaNhac.Models.Address
@{
    ViewData["Title"] = "Thêm địa chỉ mới";
}

<div class="profile-root">
    @{ ViewData["ActiveTab"] = "Address"; }
    <partial name="_ProfileHeader" />

    <div class="container-fluid artist-content">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="d-flex justify-content-between align-items-center mb-5">
                    <div>
                        <h4 class="fw-bold mb-1">Thêm địa chỉ mới</h4>
                        <p class="text-muted mb-0">Nhập thông tin nhận hàng chi tiết</p>
                    </div>
                </div>

                <form asp-action="CreateAddress" method="post">
                     <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                     <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

                     <div class="row g-5">
                         <div class="col-md-6">
                             <div class="form-minimal">
                                 <label asp-for="ReceiverName">Tên người nhận</label>
                                 <input asp-for="ReceiverName" class="form-minimal-control" placeholder="Nguyễn Văn A" />
                                 <span asp-validation-for="ReceiverName" class="text-danger small mt-1 d-block"></span>
                             </div>
                         </div>
                         <div class="col-md-6">
                             <div class="form-minimal">
                                 <label asp-for="PhoneNumber">Số điện thoại</label>
                                 <input asp-for="PhoneNumber" class="form-minimal-control" placeholder="0909..." />
                                 <span asp-validation-for="PhoneNumber" class="text-danger small mt-1 d-block"></span>
                             </div>
                         </div>
                         <div class="col-md-6">
                             <div class="form-minimal">
                                 <label asp-for="Province">Tỉnh / Thành phố</label>
                                 <input asp-for="Province" class="form-minimal-control" placeholder="TP. Hồ Chí Minh" />
                                 <span asp-validation-for="Province" class="text-danger small mt-1 d-block"></span>
                             </div>
                         </div>
                         <div class="col-md-6">
                             <div class="form-minimal">
                                 <label asp-for="Line2">Phường / Xã</label>
                                 <input asp-for="Line2" class="form-minimal-control" placeholder="Phường Bến Nghé" />
                                 <span asp-validation-for="Line2" class="text-danger small mt-1 d-block"></span>
                             </div>
                         </div>
                         <div class="col-12">
                             <div class="form-minimal">
                                 <label asp-for="Line1">Địa chỉ chi tiết</label>
                                 <input asp-for="Line1" class="form-minimal-control" placeholder="Số nhà, đường..." />
                                 <span asp-validation-for="Line1" class="text-danger small mt-1 d-block"></span>
                             </div>
                         </div>
                     </div>

                     <div class="mt-5 d-flex gap-3">
                         <a asp-action="Address" class="btn btn-outline-secondary rounded-pill px-4 fw-bold">Hủy bỏ</a>
                         <button type="submit" class="btn btn-dark rounded-pill mt-0 w-auto px-5 fw-bold">
                             Lưu Địa Chỉ
                         </button>
                     </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
