@model List<CuaHangBangDiaNhac.Models.Address>
@{
    ViewData["Title"] = "Sổ địa chỉ";
}

<div class="profile-root">
    @{ ViewData["ActiveTab"] = "Address"; }
    <partial name="_ProfileHeader" />

    <div class="container-fluid artist-content">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                        <i class="bi bi-house-door-fill me-1"></i>Trang chủ
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="Profile" asp-action="Index" class="text-decoration-none">Hồ sơ cá nhân</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Sổ địa chỉ</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                 <h4 class="fw-bold mb-1">Sổ địa chỉ</h4>
                 <p class="text-muted mb-0">Quản lý địa chỉ nhận hàng của bạn</p>
            </div>
            @if (Model.Count < 2)
            {
                <a asp-action="CreateAddress" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-outline-dark rounded-pill px-4 fw-bold">
                    <i class="bi bi-plus-lg me-1"></i> Thêm địa chỉ
                </a>
            }
        </div>

        @if (Model == null || Model.Count == 0)
        {
            <div class="text-center py-5">
                <div class="mb-3 text-muted opacity-50 display-1"><i class="bi bi-geo-alt"></i></div>
                <h5 class="fw-bold">Bạn chưa có địa chỉ nào</h5>
                <p class="text-muted mb-4">Thêm địa chỉ để thanh toán nhanh chóng hơn.</p>
                <a asp-action="CreateAddress" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-dark rounded-pill px-4 fw-bold text-white">Thêm ngay</a>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="position-relative p-4 rounded-3 h-100 d-flex flex-column justify-content-between shadow-sm bg-white" 
                             style="border: 1px solid @(item.IsDefault ? "#0d6efd" : "#dee2e6");">
                            
                            @if(item.IsDefault)
                            {
                                <div class="position-absolute top-0 end-0 m-3">
                                    <span class="badge bg-primary text-white">Mặc định</span>
                                </div>
                            }
                            
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <h5 class="fw-bold mb-0">@item.ReceiverName</h5>
                                </div>
                                <div class="text-dark fw-bold mb-2">@item.PhoneNumber</div>
                                <p class="text-muted mb-0">
                                    @{
                                        var bkParts = new List<string>();
                                        if (!string.IsNullOrWhiteSpace(item.Province)) bkParts.Add(item.Province);
                                        if (!string.IsNullOrWhiteSpace(item.Line2)) bkParts.Add(item.Line2);
                                        if (!string.IsNullOrWhiteSpace(item.Line1)) bkParts.Add(item.Line1);
                                    }
                                    @string.Join(", ", bkParts)
                                </p>
                            </div>

                            <div class="d-flex gap-2 mt-3 pt-3 border-top border-light">
                                @if (!item.IsDefault)
                                {
                                    <form asp-action="SetDefaultAddress" asp-route-id="@item.Id" method="post" class="flex-grow-1">
                                        <button type="submit" class="btn btn-sm btn-outline-secondary w-100">Đặt mặc định</button>
                                    </form>
                                }
                                
                                <a asp-action="EditAddress" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary h-100 fw-bold"><i class="bi bi-pencil-square me-1"></i> Sửa</a>

                                <form asp-action="DeleteAddress" asp-route-id="@item.Id" method="post" class="delete-address-form">
                                     <button type="submit" class="btn btn-sm btn-outline-danger border-0 h-100"><i class="bi bi-trash"></i></button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.delete-address-form').on('submit', function (e) {
                e.preventDefault();
                var form = this;
                Swal.fire({
                    title: 'Xóa địa chỉ?',
                    text: "Bạn không thể hoàn tác hành động này.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Xóa',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) form.submit();
                });
            });
            
             @if (TempData["SuccessMessage"] != null)
            {
                <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Thành công!',
                    text: '@Html.Raw(TempData["SuccessMessage"])',
                    confirmButtonColor: '#ffc107',
                    confirmButtonText: 'Đóng'
                });
                </text>
            }
        });
    </script>
}
