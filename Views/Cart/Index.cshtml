@model CuaHangBangDiaNhac.ViewModels.CartViewModel
@using CuaHangBangDiaNhac.Extensions
@{
    ViewData["Title"] = "Giỏ hàng của bạn";
}

<div class="container py-5" style="padding-bottom: 60px;">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                    <i class="bi bi-house-door-fill me-1"></i>Trang chủ
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Giỏ hàng</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-uppercase fw-extra-bold mb-0"><i class="bi bi-cart3 me-2"></i>Giỏ hàng (@Model.TotalItems sản phẩm)</h2>
        <a asp-controller="Product" asp-action="Index" class="text-decoration-none fw-bold text-dark">
            <i class="bi bi-arrow-left me-1"></i>Tiếp tục mua sắm
        </a>
    </div>

    @if (Model.Items.Any())
    {
        <div class="row">
            <!-- CART ITEMS TABLE -->
            <div class="col-lg-12">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table align-middle mb-0">
                                <thead class="" style="border-bottom: 2px solid #000;">
                                    <tr>
                                        <th scope="col" class="ps-4 py-3" style="width: 50px;">
                                            <input type="checkbox" class="form-check-input" id="check-all">
                                        </th>
                                        <th scope="col" class="ps-2 py-3 text-uppercase fw-bold text-dark small">Sản phẩm</th>
                                        <th scope="col" class="text-center py-3 text-uppercase fw-bold text-dark small">Đơn giá</th>
                                        <th scope="col" class="text-center py-3 text-uppercase fw-bold text-dark small">Số lượng</th>
                                        <th scope="col" class="text-end pe-4 py-3 text-uppercase fw-bold text-dark small">Thành tiền</th>
                                        <th scope="col" class="text-center py-3 text-uppercase fw-bold text-dark small" style="width: 100px;">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ 
                                        string currentArtist = ""; 
                                        // Bang mau da dang: Blue, Green, Red, Orange, Purple, Pink, Indigo, Teal, Brown, DarkGold
                                        var artistColors = new[] { 
                                            "#0d6efd", // Blue
                                            "#198754", // Green
                                            "#dc3545", // Red
                                            "#fd7e14", // Orange
                                            "#6f42c1", // Purple
                                            "#d63384", // Pink
                                            "#6610f2", // Indigo
                                            "#20c997", // Teal
                                            "#8540f5", // Light Purple
                                            "#B8860B"  // Dark Gold
                                        };
                                    }
                                    @foreach (var item in Model.Items)
                                    {
                                        if (item.ArtistName != currentArtist)
                                        {
                                            currentArtist = item.ArtistName;
                                            var colorHex = artistColors[item.ArtistId % artistColors.Length];
                                            
                                            <tr class="table-light border-top border-bottom border-2 border-secondary border-start-0 border-end-0">
                                                <td colspan="6" class="ps-4 py-2 fw-extra-bold text-uppercase small" 
                                                    style="letter-spacing: 1px; background-color: rgba(0,0,0,0.02); color: @colorHex;">
                                                    <div class="d-flex align-items-center gap-2">
                                                        <input type="checkbox" class="form-check-input artist-checkbox" 
                                                               data-artist="@item.ArtistId">
                                                        <i class="bi bi-mic-fill"></i> @currentArtist
                                                    </div>
                                                </td>
                                            </tr>
                                        }

                                        <tr id="row-@item.ProductId" class="@(item.IsOutOfStock ? "opacity-50" : "")" style="border-bottom: 1px solid #eee;">
                                            <td class="ps-4">
                                                <input type="checkbox" class="form-check-input item-checkbox" 
                                                       data-artist="@item.ArtistId" 
                                                       data-id="@item.ProductId"
                                                       data-qty="@item.Quantity"
                                                       data-raw="@item.Total"
                                                       @(item.IsOutOfStock ? "disabled" : "")>
                                            </td>
                                            <td class="ps-2 py-3">
                                                <div class="d-flex align-items-center gap-3">
                                                    <div class="position-relative">
                                                        <img src="@item.ProductImage" class="rounded border" style="width: 80px; height: 80px; object-fit: cover;">
                                                        @if (item.IsOutOfStock)
                                                        {
                                                            <span class="position-absolute top-50 start-50 translate-middle badge bg-dark text-white rounded-0">HẾT HÀNG</span>
                                                        }
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-1 fw-extra-bold">
                                                            <a href="@Url.Action("Details", "Product", new { id = item.ProductId })" class="text-decoration-none text-dark">
                                                                @item.ProductName
                                                            </a>
                                                        </h6>
                                                        <div class="d-flex gap-2 mt-1">
                                                            @if (item.IsPreOrder)
                                                            {
                                                                <span class="badge bg-warning text-dark border border-dark rounded-0 px-2">PRE-ORDER</span>
                                                            }
                                                            @if (item.IsUsed)
                                                            {
                                                                <span class="badge bg-dark rounded-0 px-2">HÀNG CŨ</span>
                                                            }
                                                            else if ((DateTime.UtcNow - item.CreatedAt).TotalDays < 30)
                                                            {
                                                                <span class="badge bg-success rounded-0 px-2">HÀNG MỚI</span>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center fw-bold">
                                                 @if (item.PromotionPrice.HasValue)
                                                {
                                                    <span class="text-danger">@item.DisplayPrice.ToVnd()</span>
                                                    <br><small class="text-muted text-decoration-line-through small">@item.Price.ToVnd()</small>
                                                }
                                                else
                                                {
                                                    <span class="text-primary">@item.Price.ToVnd()</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (!item.IsOutOfStock)
                                                {
                                                    <div class="input-group input-group-sm d-flex justify-content-center mx-auto" style="width: 120px;">
                                                        <button class="btn btn-outline-dark cart-qty-minus" type="button"><i class="bi bi-dash"></i></button>
                                                        <input type="number" class="form-control text-center quantity-input fw-bold border-dark" 
                                                               value="@item.Quantity" min="1" max="@item.MaxStock"
                                                               data-id="@item.ProductId" readonly style="background-color: #fff;">
                                                        <button class="btn btn-outline-dark cart-qty-plus" type="button"><i class="bi bi-plus"></i></button>
                                                    </div>
                                                } 
                                                else 
                                                {
                                                    <span class="text-muted fw-bold">0</span>
                                                }
                                            </td>
                                            <td class="text-end pe-4 fw-extra-bold text-success fs-5 row-total" id="total-@item.ProductId" data-raw="@item.Total">
                                                @item.Total.ToVnd()
                                            </td>
                                            <td class="text-center">
                                                <form asp-action="RemoveItem" method="post" class="d-inline">
                                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-dark fw-bold" title="Xóa">
                                                        <i class="bi bi-trash"></i> Xóa
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- STICKY BOTTOM BAR -->
            <div id="sticky-cart-bar" class="fixed-bottom bg-white border-top shadow-lg py-3" style="z-index: 1000; transition: all 0.3s ease;">
                <div class="container">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                        <div class="d-flex align-items-center gap-3">
                             <div class="form-check mb-0">
                                <input type="checkbox" class="form-check-input" id="check-all-bottom">
                                <label class="form-check-label fw-extra-bold text-uppercase" for="check-all-bottom">Chọn tất cả (<span id="selected-count">0</span>)</label>
                             </div>
                             <button type="button" class="btn btn-outline-danger fw-bold text-uppercase ms-3" id="btn-delete-selected" style="min-width: 100px;">
                                <i class="bi bi-trash me-1"></i>Xóa
                             </button>
                        </div>
                        <div class="d-flex align-items-center gap-4">
                             <div class="text-end">
                                 <div class="text-secondary fw-bold small">Tổng thanh toán (<span id="total-qty">0</span> sản phẩm):</div>
                                 <div class="fs-3 fw-extra-bold text-success" id="sticky-total">0 ₫</div>
                             </div>
                             <a asp-controller="Checkout" asp-action="Index" class="btn btn-dark px-5 py-2 fw-bold text-uppercase btn-checkout card-shadow-hover">
                                Mua Hàng
                             </a>
                        </div>
                    </div>
                </div>
            </div>
            <div id="cart-end-marker"></div>

        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-cart-x display-1 text-muted"></i>
            </div>
            <h3 class="fw-bold text-muted">Giỏ hàng của bạn đang trống</h3>
            <p class="text-muted mb-4">Hãy thêm vài đĩa nhạc yêu thích vào đây nhé!</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-dark px-4 py-2">
                Quay lại cửa hàng
            </a>
        </div>
    }
</div>

@section Scripts {
    <!-- Logic handled in cart.js -->
}
