@using Microsoft.AspNetCore.Identity
@using CuaHangBangDiaNhac.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var displayName = user?.FullName ?? User.Identity?.Name ?? "Khách hàng";

    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-white fw-bold" id="navbarDropdownUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-user-circle me-1"></i> @displayName
        </a>
        <ul class="dropdown-menu dropdown-menu-end bg-dark border-secondary" aria-labelledby="navbarDropdownUser">
            <li><a class="dropdown-item text-white-50 hover-light" href="#">Hồ sơ cá nhân</a></li>
            <li><a class="dropdown-item text-white-50 hover-light" href="#">Đơn hàng của tôi</a></li>
            
            @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
            {
                <li><hr class="dropdown-divider bg-secondary"></li>
                <li>
                    <a class="dropdown-item text-warning fw-bold" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <i class="fas fa-cogs"></i> Quản trị
                    </a>
                </li>
            }

            <li><hr class="dropdown-divider bg-secondary"></li>
            
            <li>
                <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="dropdown-item text-danger fw-bold">
                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Register">Đăng ký</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white btn btn-outline-light ms-2 btn-sm px-3 rounded-pill" asp-area="" asp-controller="Account" asp-action="Login">
            Đăng nhập
        </a>
    </li>
}
</ul>